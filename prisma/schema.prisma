generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  firstName       String?  @db.VarChar(25)
  lastName        String?  @db.VarChar(25)
  email           String   @unique
  password        String   @db.VarChar(100)
  phone           String?
  state           String?
  city            String?
  landmark        String?
  country         String?
  address1        String?
  address2        String?
  isDeleted       Boolean?
  isEmailVerified Boolean?
  Post            Post[]
  bio             String?
}

model Post {
  id           String  @id @default(uuid())
  title        String? @db.VarChar(50)
  sectionOne   String? @db.VarChar(256)
  sectionTwo   String? @db.VarChar(256)
  sectionThree String? @db.VarChar(256)
  authorId     String?
  author       User?   @relation(fields: [authorId], references: [id])
}
